<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@android:color/black</item>
    </style>

    <style name="Title" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Subtitle" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ListItemName" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemAuthor" parent="Theme.AppCompat">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemInfo" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RouteInfoValue" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RouteInfoLabel" parent="Theme.AppCompat">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RouteEditorTextLabel" parent="Theme.AppCompat">
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RouteEditorTextEdit" parent="Theme.AppCompat">
        <item name="android:maxLines">3</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
